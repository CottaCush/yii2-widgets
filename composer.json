{
    "name": "cottacush/yii2-widgets",
    "type": "library",
    "description": "Useful Yii2 widgets created by the Cotta &amp; Cush development team",
    "keywords": [
        "cottacush",
        "yii2-widgets"
    ],
    "homepage": "https://github.com/cottacush/yii2-widgets",
    "license": "MIT",
    "authors": [
        {
            "name": "Cotta & Cush Developers",
            "email": "developers@cottacush.com",
            "homepage": "http://cottacush.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "yiisoft/yii2": ">=2.0.8",
        "bower-asset/font-awesome": "~4.7.0",
        "bower-asset/toastr": ">=2.1.3",
        "bower-asset/dropzone": ">=4.3.0",
        "yiisoft/yii2-bootstrap": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "CottaCush\\Yii2\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CottaCush\\Yii2\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
